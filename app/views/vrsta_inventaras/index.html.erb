<p id="notice"><%= notice %></p>

<h1>Popis vrsta inventara</h1>

<table class="table table-bordered table-striped table-dark">
  <thead class="thead-dark">
    <tr>
      
      <th>Naziv vrste</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vrsta_inventaras.each do |vrsta_inventara| %>
      <tr>
        
        <td><%= vrsta_inventara.naziv_vrste %></td>
        <td>
          <%= link_to 'Detalji', vrsta_inventara, class: 'btn btn-dark' %>
          <%= link_to 'Izmjena', edit_vrsta_inventara_path(vrsta_inventara), class: 'btn btn-dark' %>
          <%= link_to 'Brisanje', vrsta_inventara, class: 'btn btn-dark', method: :delete, data: { confirm: 'Jeste li sigurni?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova vrsta inventara', new_vrsta_inventara_path, class: 'btn btn-dark'%>
