<p id="notice"><%= notice %></p>

<h1>Popis korisnika</h1>

<table class="table table-bordered table-striped table-dark">
  <thead class="thead-dark">
    <tr>
      <th>Id korisnika</th>
      <th>Username</th>
      <th>Password</th>
      <th>Ime</th>
      <th>Prezime</th>
      <th>Email</th>
      <th>Broj telefona</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @korisniks.each do |korisnik| %>
      <tr>
        <td><%= korisnik.id_korisnika %></td>
        <td><%= korisnik.username %></td>
        <td><%= korisnik.password %></td>
        <td><%= korisnik.ime %></td>
        <td><%= korisnik.prezime %></td>
        <td><%= korisnik.email %></td>
        <td><%= korisnik.broj_telefona %></td>
        <td><%= link_to 'Detalji', korisnik %></td>
        <td><%= link_to 'Izmjena', edit_korisnik_path(korisnik) %></td>
        <td><%= link_to 'Brisanje', korisnik, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Korisnik', new_korisnik_path, class: 'btn btn-dark' %>
